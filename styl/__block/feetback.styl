.feetback{
  background: #fff;
  padding-bottom: 50px


  @media desktop-width{
    padding-top: 0;
    padding-bottom 200px;
  }
  &__title{
    font-size: 42px;
    color: #333333;
    text-align: center
  }
    hr{
      margin-top:19px;
      margin-bottom: 30px;
      

    }
      &__text{
        font-size:22px;
        color #999999
        max-width: 680px
        padding-left 10px;
        padding-right:  10px
        margin: 0  auto;
        text-align: center
      }
        &__list{
          margin-top: 48px
          margin-left: 60px;
          margin-right: 52px;
          display flex
          flex-wrap nowrap
          justify-content: space-between
          @media desktop-width{
            flex-wrap wrap
            justify-content: space-around
            margin-top: 10px;

          }

        }
          &__item{
            width: 270px
            @media desktop-width{
              width: auto
              max-width: 450px;
              padding-top: 20px;
            }

          }
            &__itemText{
              padding-top: 12px;
              padding-left: 5px;
              background-color: #f8f8f8;
              font-size: 18px
              color #666666;
              text-align: left
              line-height: 120%;
              @media desktop-width{
                margin-left 10px;
              }


            }
              &__photo{
                margin-top: 35px;
              }
              &__name{
                display inline-block
                color #333333;
                font-size: 18px;
                width:106px;
                position: relative;
                top: -21px;
                left: 16px;
                @media desktop-width{
                  top: 0;
                }
              }
    &__work{
      color #cccccc
      font-size: 17px
    }
}